{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "shell-access",
  "description": "Allows executing adb and scrcpy commands",
  "windows": [
    "main"
  ],
  "permissions": [
    "shell:allow-open",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "scrcpy",
          "cmd": "scrcpy",
          "args": true
        },
        {
          "name": "scrcpy.exe",
          "cmd": "scrcpy.exe",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "scrcpy",
          "cmd": "scrcpy",
          "args": true
        },
        {
          "name": "scrcpy.exe",
          "cmd": "scrcpy.exe",
          "args": true
        }
      ]
    }
  ],
  "platforms": [
    "windows",
    "linux",
    "macOS"
  ]
}