{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "scrcpy-gui-tauri",
    "version": "0.0.1"
  },
  "tauri": {
    "permissions": [
      "shell:allow-execute",
      "shell:allow-open",
      "shell:allow-sidecar"
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "shell-access",
          "description": "Allows executing adb and scrcpy commands",
          "windows": ["main"],
          "permissions": [
            "shell:allow-execute",
            "shell:allow-open"
          ],
          "platforms": ["windows", "linux", "macos"]
        }
      ],
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "me.thinhbuzz",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "scrcpy-gui-tauri",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400
      }
    ]
  }
}
